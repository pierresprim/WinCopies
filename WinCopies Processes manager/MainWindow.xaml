<Window x:Class="WinCopiesProcessesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCopiesProcessesManager"
        xmlns:controls="clr-namespace:WinCopies.GUI.Controls;assembly=WinCopies.GUI.Controls"
        mc:Ignorable="d"
        Title="WinCopies processes manager window" Height="450" Width="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding Processes, Source={x:Static local:App.Current}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:Process>

                    </local:Process>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <ScrollViewer>
                        <StackPanel IsItemsHost="True" />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>
        </ItemsControl>
        <!--<controls:LightProgressBar />-->
        <!--<controls:LightProgressBar />-->
        <!--<controls:UserControl1 Height="100" Width="100" />-->
    </Grid>
</Window>
