<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <RootNamespace>WinCopies</RootNamespace>
    <UseWPF>true</UseWPF>
    <AssemblyName>WinCopies</AssemblyName>
    <VersionPrefix>2.1</VersionPrefix>
    <VersionSuffix>beta</VersionSuffix>
    <ApplicationIcon>WinCopies.ico</ApplicationIcon>
    <Authors>Pierre Sprimont</Authors>
    <Description>File explorer software (alpha)</Description>
    <Copyright>Copyright © Pierre Sprimont 2021</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl></RepositoryUrl>
    <RepositoryType></RepositoryType>
    <PackageReleaseNotes></PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WinCopies.GUI.Icons" Version="3.0.0-preview" />
    <PackageReference Include="WinCopies.GUI.Templates" Version="3.2.0-preview" />
    <PackageReference Include="WinCopies.IO" Version="3.2.0.1-preview" />
    <PackageReference Include="WinCopies.GUI.IO" Version="3.2.0.1-preview" />
    <PackageReference Include="WinCopies.Collections" Version="3.7.2-preview" />
    <PackageReference Include="WinCopies.Util.Desktop" Version="3.7.2-preview" />
    <!--<PackageReference Include="WinCopies.GUI" Version="3.0.0-preview" />
    <PackageReference Include="WinCopies.Util" Version="3.4.0-preview" />-->
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Menus.xml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>