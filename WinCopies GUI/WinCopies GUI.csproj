<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <RootNamespace>WinCopies</RootNamespace>
    <UseWPF>true</UseWPF>
    <AssemblyName>WinCopies</AssemblyName>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>beta</VersionSuffix>
    <ApplicationIcon>WinCopies.ico</ApplicationIcon>
    <Authors>Pierre Sprimont</Authors>
    <Description>File explorer software (beta)</Description>
    <Copyright>Copyright © Pierre Sprimont 2020</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://wincopies.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/pierresprim/WinCopies.git</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageReleaseNotes>See Changelog</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WinCopies.GUI.Icons" Version="2.2.0-preview4" />
    <PackageReference Include="WinCopies.GUI.IO" Version="2.2.0-preview4" />
    <PackageReference Include="WinCopies.GUI.Windows" Version="2.2.0-preview4" />
    <PackageReference Include="WinCopies.PushBinding" Version="1.2.2" />
    <PackageReference Include="WinCopies.Util.Desktop" Version="2.2.0-preview4" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Menus.xml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>