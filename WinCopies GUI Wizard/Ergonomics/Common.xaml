<Page x:Class="WinCopiesGUIWizard.Ergonomics.Common"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WinCopiesGUIWizard.Ergonomics"
      xmlns:dataConverters="clr-namespace:WinCopies.Util.Data;assembly=WinCopies.Util"
      xmlns:explorer="clr-namespace:WinCopies.GUI.Explorer;assembly=WinCopies.GUI.Explorer"
      xmlns:settings="clr-namespace:WinCopies.SettingsManagement;assembly=WinCopies.SettingsManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ergonomics">
    <Page.Resources>
        <dataConverters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" ></dataConverters:EnumToBooleanConverter>
    </Page.Resources>
    <Page.Template>
        <ControlTemplate TargetType="{x:Type Page}" >
            <Grid >
                <Grid.RowDefinitions >
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Header="{StaticResource FolderBrowsing}">
                    <StackPanel >
                        <RadioButton Content="{StaticResource OpenFoldersInSameTab}" GroupName="Folder browsing" IsChecked="{Binding OpenFolderMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static settings:OpenFolderMode.OpenFoldersInSameTab}}" />
                        <RadioButton Content="{StaticResource OpenFoldersInMultipleTabs}" GroupName="Folder browsing" IsChecked="{Binding OpenFolderMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static settings:OpenFolderMode.OpenFoldersInMultipleTabs}}" />
                        <RadioButton Content="{StaticResource OpenFoldersInMultipleWindows}" GroupName="Folder browsing" IsChecked="{Binding OpenFolderMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static settings:OpenFolderMode.OpenFoldersInMultipleWindows}}" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Grid.Row="1" Header="{StaticResource ClickOnItemGesture}" >
                    <StackPanel >
                        <RadioButton x:Name="OpenOnFirstClick" Content="{StaticResource OpenOnFirstClick}" GroupName="Click on item gesture" IsChecked="{Binding ClicksToOpen, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static explorer:OpenMode.OnDoubleClick}}" />
                        <RadioButton Content="{StaticResource UnderlineWhenItemIsPointed}" GroupName="Click on item gesture when open on first click" IsChecked="{Binding UnderliningMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static settings:UnderliningMode.UnderlineWhenItemIsPointed}}" Margin="20,0,0,0" IsEnabled="{Binding IsChecked, ElementName=OpenOnFirstClick}" />
                        <RadioButton Content="{StaticResource UnderlineAllItems}" GroupName="Click on item gesture when open on first click" IsChecked="{Binding UnderliningMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static settings:UnderliningMode.UnderlineAllItems}}" Margin="20,0,0,0" IsEnabled="{Binding IsChecked, ElementName=OpenOnFirstClick}" />
                        <RadioButton Content="{StaticResource OpenOnSecondClick}" GroupName="Click on item gesture" IsChecked="{Binding ClicksToOpen, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static explorer:OpenMode.OnDoubleClick}}" />
                    </StackPanel>
                </GroupBox>
            </Grid>
        </ControlTemplate>
    </Page.Template>
</Page>
